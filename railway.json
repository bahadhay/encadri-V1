{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Encadri-Backend/Encadri-Backend/Dockerfile",
    "dockerContext": "Encadri-Backend/Encadri-Backend"
  },
  "deploy": {
    "startCommand": "dotnet Encadri-Backend.dll",
    "healthcheckPath": "/swagger/index.html",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
